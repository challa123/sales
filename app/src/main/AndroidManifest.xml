<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.salesapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SplashActivity" />
        <activity android:name=".DistributorsActivity" />
        <activity android:name=".CustomersActivity" />
        <activity android:name=".AddNewProductActivity" />
        <activity android:name=".NewOrderActivity" />
        <activity android:name=".ProductActivity" />
        <activity android:name=".OrdersActivity" />
        <activity android:name=".PendingOrdersActivity"></activity>
    </application>

</manifest>